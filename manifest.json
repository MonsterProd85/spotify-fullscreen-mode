{
  "manifest_version": 3,
  "name": "Spotify Fullscreen Mode",
  "version": "1.0.0",
  "description": "Enhances Spotify Web Player with a beautiful fullscreen mode featuring album art and canvas videos",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://open.spotify.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}